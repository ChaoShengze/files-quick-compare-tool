<Window x:Class="FilesQuickCompareTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FilesQuickCompareTool"
        mc:Ignorable="d"
        Title="文件快速比对工具" Height="600" Width="800">
    <Grid>
        <TextBox x:Name="Tbx_FolderPath" Height="20" Margin="10,10,90,0" TextWrapping="Wrap" VerticalAlignment="Top" VerticalContentAlignment="Center"/>
        <Button x:Name="Btn_SelectFolder" Content="选择目录" HorizontalAlignment="Right" Margin="0,10,10,0" VerticalAlignment="Top" Width="75" Height="20"/>
        <TextBox x:Name="Tbx_FolderPath_2nd" Height="20" Margin="10,35,90,0" TextWrapping="Wrap" VerticalAlignment="Top" VerticalContentAlignment="Center"/>
        <Button x:Name="Btn_SelectFolder_2nd" Content="选择目录" HorizontalAlignment="Right" Margin="0,35,10,0" VerticalAlignment="Top" Width="75" Height="20"/>
        <GroupBox Header="操作台" Margin="10,60,0,10" HorizontalAlignment="Left" Width="128.8">
            <Grid Margin="0"/>
        </GroupBox>
        <GroupBox Header="展示区" Margin="143.8,60,10,10">
            <Grid Margin="0"/>
        </GroupBox>
    </Grid>
</Window>
